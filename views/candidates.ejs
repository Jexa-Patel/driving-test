<!DOCTYPE html>
<html lang="en">

<%- include('layouts/head'); %>


    <body>
        <%- include('layouts/nav'); %>
            <header class="masthead"
                style="background-image:linear-gradient(rgba(47, 23, 15, 0.65),rgba(47, 23, 15, 0.65)), url('assets/img/intro.jpg')">
                <div class="container position-relative px-4 px-lg-5">
                    <div class="row gx-4 gx-lg-5 justify-content-center">
                        <div class="col-md-10 col-lg-8 col-xl-7">
                            <div class="site-heading">
                                <h1>CANDIDATES LIST</h1>
                                <span class="subheading">Pass/Fail Candidates Are Shown Here</span>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <div class="container mt-5">
                <h1 class="text-center">Pass/Fail Candidates</h1>

                <!-- Display candidates -->
                <table class="table table-bordered mt-3">
                    <thead>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Test Type</th>
                            <th>Test Result</th>
                            <th>Examiner Comments</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% candidates.forEach(candidate=> { %>
                            <tr>
                                <td>
                                    <%= candidate.firstname %>
                                </td>
                                <td>
                                    <%= candidate.lastname %>
                                </td>
                                <td>
                                    <%= candidate.testType %>
                                </td>
                                <td>
                                    <%= candidate.testResult ? "Pass" : "Fail" %>
                                </td>
                                <td>
                                    <%= candidate.examinerComment || "N/A" %>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
            </div>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
    </body>

</html>